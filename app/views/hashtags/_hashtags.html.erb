<div class="list-unstyled">
  <% hashtags.each do |hashtag| %>
    <div class="hogehoge mb-3">
      <span><%= hashtag.content %></span>
      <% if current_user == hashtag.user %>
        <%= link_to "X", hashtag, method: :delete,  class: 'btn2 btn-danger btn-sm' %>
      <% end %>
    </div>
  <% end %>
</div>